    <script>
          document.addEventListener('DOMContentLoaded', function () {
        const quantityInput = document.querySelector('input[name="quantity"]');
        quantityInput.addEventListener('input', validateQuantity);
    
        function validateQuantity() {
            const quantityValue = quantityInput.value.trim();
    
            if (quantityValue === "") {
                quantityInput.setCustomValidity("Quantity cannot be blank.");
            } else if (!/^\d+$/.test(quantityValue)) {
                quantityInput.setCustomValidity("Quantity can only contain numbers.");
            } else {
                const quantityNumber = parseInt(quantityValue, 10);
                if (quantityNumber === 0) {
                    quantityInput.setCustomValidity("Quantity cannot be zero.");
                } else if (quantityNumber > 1000) {
                    quantityInput.setCustomValidity("Quantity cannot be greater than 1000.");
                } else {
                    quantityInput.setCustomValidity(""); // No validation error
                }
            }
        }
    });
    
    </script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".btn-link");
        const imagePreviewContainer = document.getElementById("image-preview-container");
        const imageInput = document.getElementById("product_image");
    
        imageInput.addEventListener("change", function () {
            const newImages = imageInput.files;
            const totalImages = imagePreviewContainer.children.length + newImages.length;
    
            if (totalImages > 4) {
                document.getElementById("imageError").textContent = "Maximum of 4 images allowed.";
                return;
            }
    
            // Clear any previous error message
            document.getElementById("imageError").textContent = "";
    
            for (let i = 0; i < newImages.length; i++) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const imageDiv = document.createElement("div");
                    imageDiv.style.display = "flex";
                    imageDiv.style.alignItems = "center";
    
                    const image = document.createElement("img");
                    image.src = e.target.result;
                    image.alt = "Newly added image";
    
                    const deleteButton = document.createElement("button");
                    deleteButton.type = "button";
                    deleteButton.classList.add("btn-link");
                    deleteButton.innerHTML = '<i class="material-icons md-delete"></i>';
                    deleteButton.addEventListener("click", function () {
                        deleteImage("new", i); // 'new' indicates a newly added image
                        imageDiv.remove(); // Remove the newly added image element
                    });
    
                    imageDiv.appendChild(image);
                    imageDiv.appendChild(deleteButton);
                    imagePreviewContainer.appendChild(imageDiv);
                };
    
                reader.readAsDataURL(newImages[i]);
            }
        });
    
        deleteButtons.forEach(function (button) {
            button.addEventListener("click", function () {
                const index = button.getAttribute("data-index");
                const productId = button.getAttribute("data-product-id");
    
                if (index === "new") {
                    // Handle the deletion of a newly added image here
                    // No need to send an AJAX request, just remove the element
                    const imageDiv = button.parentElement;
                    imageDiv.remove();
                } else {
                    // Send an AJAX request to the server to delete the image
                    deleteImage(index, productId);
                }
            });
        });
     });
    </script>
    

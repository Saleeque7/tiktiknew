<script>
$(document).ready(function () {
    $('.toggle-button').on('click', function () {
        const userId = $(this).data('user-id');
        const active = $(this).hasClass('btn-success'); // Check if it's currently active

        // Send an AJAX request to toggle the user's status
        $.post('/users', { userId, active }, function (data) {
            if (data.success) {
                // Update the button appearance and text
                $(this).toggleClass('btn-success btn-danger');
                $(this).text(data.is_block ? 'Inactive' : 'Active');
            } else {
                alert(data.message);
            }
        }.bind(this));
    });
});
</script>

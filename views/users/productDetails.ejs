            <div class="col-lg-7 col-xl-7">
              <div class="product_slider_img">
                <div id="vertical">
                  <% products.image.forEach((image, index) => { %>
                    <div data-thumb="/public/uploadProduct/<%= image %>">
                      <img onmouseover="expand(this)" onmouseout="shrink(this)" src="/public/uploadProduct/<%= image %>" width="400" height="400" alt="Products Image <%= index + 1 %>" />
                    </div>
                  <% }); %>
                </div>
                
                <script>
                  let difference = 2;
                
                  function expand(imageElement) {
                    let width = 400;
                    let height = 400;
                    let interveralID; // Define the variable to store the interval ID
                
                    clearInterval(interveralID); // Clear any existing interval to avoid conflicts
                
                    interveralID = setInterval(() => {
                      if (width < 800 && height < 450) {
                        width += difference;
                        height += difference;
                        imageElement.style.width = width + "px";
                        imageElement.style.height = height + "px";
                      } else {
                        clearInterval(interveralID);
                      }
                    }, 5);
                  }
                
                  function shrink(imageElement) {
                    let width = 450;
                    let height = 450;
                    let interveralID; // Define the variable to store the interval ID
                
                    clearInterval(interveralID); // Clear any existing interval to avoid conflicts
                
                    interveralID = setInterval(() => {
                      if (width > 400 && height > 400) {
                        width -= difference;
                        height -= difference;
                        imageElement.style.width = width + "px";
                        imageElement.style.height = height + "px";
                      } else {
                        clearInterval(interveralID);
                      }
                    },5);
                  }
                </script>
                
